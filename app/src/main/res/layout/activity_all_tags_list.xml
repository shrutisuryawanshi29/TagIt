<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".ShowTags.AllTagsListActivity">

    <!-- ToolBar View -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_btn_list_tags"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:tint="@color/colorOneDark"
            android:background="@color/colorBackground"
            android:contentDescription="Back Button"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:text="List Of Tags"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorOneDark"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_tags_et"
        android:layout_margin="18dp"
        android:hint="Search Tags"
        android:textColorHint="@color/colorTwoLight"
        android:textColor="@color/colorOneDark"
        android:backgroundTint="@color/colorTwoLight" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Click on the tags for details"
        android:textColor="@color/colorOneDark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:id="@+id/list_tags_recycler_view"/>

</LinearLayout>